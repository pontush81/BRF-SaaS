# Production environment settings
NEXT_PUBLIC_APP_URL=https://handbok.org
NEXT_PUBLIC_APP_DOMAIN=handbok.org
NEXT_PUBLIC_MARKETING_DOMAIN=handbok.org

# Database (Prisma)
# Connect to Supabase via connection pooling - Production schema (public)
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-eu-north-1.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection to the database. Used for migrations
DIRECT_URL="postgresql://postgres.[project-ref]:[password]@aws-0-eu-north-1.pooler.supabase.com:5432/postgres"

# Supabase
NEXT_PUBLIC_SUPABASE_URL="https://[project-ref].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-production-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-production-service-role-key"

# Auth (NextAuth - optional)
NEXTAUTH_URL=https://handbok.org
NEXTAUTH_SECRET=strong-random-production-secret

# Stripe - Production (Live Keys)
STRIPE_SECRET_KEY="sk_live_your_stripe_live_key"
STRIPE_WEBHOOK_SECRET="whsec_your_production_webhook_secret"
STRIPE_PORTAL_CONFIGURATION_ID="bpc_your_live_portal_configuration_id"

# Stripe Price IDs - Monthly billing
STRIPE_PRICE_ID_BASIC_MONTHLY="price_basic_monthly_live_id"
STRIPE_PRICE_ID_STANDARD_MONTHLY="price_standard_monthly_live_id"
STRIPE_PRICE_ID_PREMIUM_MONTHLY="price_premium_monthly_live_id"

# Stripe Price IDs - Yearly billing
STRIPE_PRICE_ID_BASIC_YEARLY="price_basic_yearly_live_id"
STRIPE_PRICE_ID_STANDARD_YEARLY="price_standard_yearly_live_id"
STRIPE_PRICE_ID_PREMIUM_YEARLY="price_premium_yearly_live_id"

# Production specific
NODE_ENV=production
APP_ENV=production 