# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_DOMAIN=handbok.se
NEXT_PUBLIC_MARKETING_DOMAIN=localhost:3000

# Database (Prisma)
# Connect to Supabase via connection pooling
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-eu-north-1.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection to the database. Used for migrations
DIRECT_URL="postgresql://postgres.[project-ref]:[password]@aws-0-eu-north-1.pooler.supabase.com:5432/postgres"

# Supabase
NEXT_PUBLIC_SUPABASE_URL="https://[project-ref].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Auth (NextAuth - optional)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=a-random-string-for-development-only

# Stripe API Keys
# Development/Staging: Use Test keys (sk_test_...)
# Production: Use Live keys (sk_live_...)
STRIPE_SECRET_KEY="sk_test_your_stripe_test_key"

# Webhook Secret (Generate in Stripe Dashboard -> Developers -> Webhooks)
# - För utveckling: Använd Stripe CLI för att hantera webhooks lokalt
#   stripe listen --forward-to localhost:3000/api/stripe/webhook
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Stripe Customer Portal (Configure in Stripe Dashboard -> Settings -> Customer Portal)
# Create a portal configuration and get the ID
STRIPE_PORTAL_CONFIGURATION_ID="bpc_your_portal_configuration_id"

# Stripe Price IDs - Monthly billing
# Skapa produkter och priser i Stripe Dashboard -> Products
# Månadsbetalning
STRIPE_PRICE_ID_BASIC_MONTHLY="price_basic_monthly_id"
STRIPE_PRICE_ID_STANDARD_MONTHLY="price_standard_monthly_id"
STRIPE_PRICE_ID_PREMIUM_MONTHLY="price_premium_monthly_id"

# Stripe Price IDs - Yearly billing
# Årsbetalning (rekommenderas för BRF)
STRIPE_PRICE_ID_BASIC_YEARLY="price_basic_yearly_id"
STRIPE_PRICE_ID_STANDARD_YEARLY="price_standard_yearly_id"
STRIPE_PRICE_ID_PREMIUM_YEARLY="price_premium_yearly_id"

# Environment
# development, production
NODE_ENV=development
# staging, production (endast för NODE_ENV=production)
APP_ENV=

# Optional: OAuth Providers (if needed)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET= 